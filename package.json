{
	"name": "versatiles-choro",
	"private": true,
	"workspaces": [
		"./packages/*"
	],
	"type": "module",
	"scripts": {
		"build": "npm run build --workspace packages/map && npm run build --workspace packages/workbench",
		"check": "npm run lint && npm run check --workspaces",
		"cli": "npm run cli --workspace packages/workbench",
		"dev": "npm run dev --workspace packages/workbench",
		"format": "prettier --write .",
		"lint": "eslint . && npm run lint --workspace packages/workbench && prettier --check .",
		"test": "npm run test --workspaces",
		"upgrade": "ncu -u --workspaces && npm install"
	},
	"engines": {
		"node": ">=24"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"npm-check-updates": "^19.1.2",
		"typescript-eslint": "^8.46.4"
	}
}