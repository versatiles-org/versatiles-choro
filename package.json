{
	"name": "versatiles-choro",
	"private": true,
	"type": "module",
	"scripts": {
		"build-cli": "rollup -c ./rollup.config.cli.ts",
		"build-svelte": "svelte-kit sync && vite build",
		"build": "npm run build-svelte && npm run build-cli",
		"check-svelte:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check-svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check": "npm run lint && npm run check-svelte && npm run test && npm run build",
		"cli": "tsx ./src/cli.ts",
		"dev": "mkdir -p data && DATA_PATH=data vite dev",
		"format": "prettier --write .",
		"lint": "eslint . && prettier --check .",
		"prepare": "husky",
		"preview": "vite preview",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"upgrade": "ncu -u && rm -r node_modules && rm -f package-lock.json && npm install"
	},
	"engines": {
		"node": ">=24"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,css,html}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"commander": "^14.0.2",
		"valibot": "^1.2.0"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.2",
		"@lucide/svelte": "^0.561.0",
		"@rollup/plugin-typescript": "^12.3.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^25",
		"@versatiles/style": "^5.8.4",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"maplibre-gl": "^5.14.0",
		"npm-check-updates": "^19.2.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"rollup": "^4.53.3",
		"svelte": "^5.45.10",
		"svelte-check": "^4.3.4",
		"tslib": "^2.8.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.49.0",
		"vite": "^7.2.7",
		"vitest": "^4.0.15"
	}
}
