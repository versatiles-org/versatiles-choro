		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^24",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"maplibre-gl": "^5.12.0",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"typescript": "^5.9.3",
