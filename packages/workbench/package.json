	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "DATA_PATH=../../testdata vite dev",
		"build": "vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
